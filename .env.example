# Database connection URL for PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Authentication configuration
BETTER_AUTH_SECRET=your_32_character_secret_key_here
BETTER_AUTH_URL=http://localhost:3000

# GitHub OAuth credentials
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Cloudinary configuration for image uploads
NEXT_PUBLIC_CLOUDINARY_UPLOAD_URL=your_cloudinary_upload_url
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_name
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Base URL for the application
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Environment mode
NODE_ENV=development

# Email configuration for sending emails
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_specific_password || if_enableed_2factor_auth_you'll_need_to_generate_app_specific_password

# PostHog analytics key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key || if_analytics_are_enabled_in_posthog_dashboard